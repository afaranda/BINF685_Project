import numpy as np
import pandas as pd
from network import greedy
from network import net

data = pd.read_csv('hw2_train.data', header=None, sep="\t")

n=net(size=len(data.columns))

n.add_edge(0,1)
n.add_edge(1,2)
n.add_edge(0,2)
n.calc_cpt(data)
n.gibbs(10)

g = greedy(data)
g.train(2,5)

qr=g.samples.loc[0,:].copy()
